// Posts Panel
// ----------------------------------------------------------------------------
.posts-panel
    display: block
    position: relative
    flex: 1

    &__toolbar
        display: flex
        justify-content: center
        margin: 0 0 20px
        list-style-type: none
        background: #e8e8e8
        padding: 15px 20px

    &__toolbar-item
        padding: 0
        margin: 0 0 0 15px

    &__toolbar-label
        font-size: 15px
        text-transform: uppercase

    &__toolbar-select
        font-size: 16px
        font-family: 'Roboto', 'sans-serif'

    &__content
        padding: 0 20px 20px

    .post-card
        border-bottom: 1px solid #ccc
        padding: 10px 0

        &__title
            margin-bottom: 5px

        &__username
            font-weight: 300
            font-size: 12px
            text-transform: uppercase

        &__username-title
            border-bottom: 3px solid #457B9D
            font-weight: 400
            padding-bottom: 10px
            margin: 0 0 10px 0
            text-transform: uppercase

    .posts-list
        margin: 0 0 40px 0
        padding: 0
        list-style-type: none

        &:last-child
            margin-bottom: 0